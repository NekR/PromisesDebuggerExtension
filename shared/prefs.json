{
	// log errors in promises
	"log_errors": true,
	// show full stack means show stack from extensions,
	// useful for this ext. dev
	"show_full_stack": true,
	// ignore promises which are auto created by then, but not handled (yet?)
	"ignore_trailing_promises": true,

	"log_caught_rejections": true,
	// pause on errors in promise which has at least one catch handler
	"pause_on_caught_errors": false,

	// attach backend to target on DevTools open
	"start_watch_on_start": false
}